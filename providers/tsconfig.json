{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017",
      "es2015.promise"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "dist/commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
